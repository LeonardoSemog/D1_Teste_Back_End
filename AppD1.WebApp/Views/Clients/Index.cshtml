@model IEnumerable<AppD1.Models.Client>
@{
    ViewBag.Title = "Index";
}

<h2>Clients</h2>
<p>
    @Html.ActionLink("New", "Create", "Clients", new { @class = "btn btn-sucess" })
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
        <th>@Html.DisplayNameFor(model => model.Rg)</th>
        <th>@Html.DisplayNameFor(model => model.Cpf)</th>
        <th colspan="4">Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfBirth, "{0:dd/MM/yyyy}")</td>
            <td>@Html.DisplayFor(modelItem => item.Rg)</td>
            <td>@Html.DisplayFor(modelItem => item.Cpf)</td>
            <td>
                @Html.ActionLink("Phones", "Phones", new { ClId = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

