@model IEnumerable<AppD1.Models.Phone>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { Cid = ViewBag.ClientId }) | 
    @Html.ActionLink("Back to Clients", "Index", "Clients" )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id, Cid = item.Client.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id, Cid = item.Client.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id, Cid = item.Client.Id })
            </td>
        </tr>
    }

</table>
